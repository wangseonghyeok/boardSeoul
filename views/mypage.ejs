<%- include("include/header"); %>
<main id="main">
  <div id="contents">
    <div class="title">
      <h2><%= title %></h2>
    </div>
    <form action="/mypage" method="POST" id="join" class="formBox">
      <div class="inputBox">
        <label>
          <span class="label">ID</span>
          <input type="text" id="userID" name="userID" placeholder="ID를 입력하세요" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Password</span>
          <input type="password" id="userPW" name="userPW" placeholder="password를 입력하세요" />
        </label>
      </div>
      <div class="inputBox">
        <label>
          <span class="label">Name</span>
          <input type="text" id="userName" name="userName" placeholder="이름을 입력하세요" />
        </label>
      </div>

      <div class="btns">
        <button type="submit" data-value="10" id="btnJoin">정보수정</button>
        <a href="/delete">회원탈퇴</a>
      </div>
    </form>
  </div>
</main>
<script>
  $("#btnJoin").on("click", () => {
    if ($("#join #userID ").val().trim().length < 8) {
      alert("아이디는 최소 8자 이상이어야 합니다");
      $("#join #userID").focus();
      return false;
    } else if (isIdChecked === false) {
      alert("ID 중복체크를 해주세요.");
      return false;
    } else if ($("#join #userPW").val().trim().length < 3) {
      alert("비밀번호는 최소 3자 이상이여야 합니다.");
      $("#join #userPW").focus();
      return false;
    } else if ($("#join #userName").val().trim().length < 3) {
      alert("닉네임은 최소 3자 이상이여야 합니다.");
      $("#join #userPW").focus();
      return false;
    }
  });
</script>
